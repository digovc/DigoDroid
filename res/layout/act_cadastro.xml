<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/actCadastro_pnlGeral"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@layout/bkg_gradiente_002"
    android:orientation="vertical"
    tools:context=".activitys.ActCadastro" >

    <LinearLayout
        android:id="@+id/actCadastro_pnlInfo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/actCadastro_pnlPesquisa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@layout/bkg_gradiente_002"
            android:padding="5dp" >

            <EditText
                android:id="@+id/actCadastro_edtPesquisa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:hint="Pesquisa"
                android:inputType="textCapCharacters" >

                <requestFocus />
            </EditText>
        </LinearLayout>

        <View
            android:id="@+id/separator"
            android:layout_width="fill_parent"
        android:layout_height="2dp"
            android:background="#33b5e5"
            android:visibility="visible" />

        <ListView
            android:id="@+id/actCadastro_pnlTbl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="#ECECEC"
            android:dividerHeight="1sp" >
        </ListView>
    </LinearLayout>

</RelativeLayout>