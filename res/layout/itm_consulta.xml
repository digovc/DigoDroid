<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itmConsulta_pnlConteudo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/darker_gray"
    android:minHeight="100dp"
    android:orientation="vertical"
    android:padding="5dp" >

    <LinearLayout
        android:id="@+id/itmConsulta_pnlCabecalho"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/itmConsulta_txtId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="CampoId "
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#0D47A1"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/itmConsulta_txtNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="CampoNome"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#0D47A1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/itmConsulta_pnlCampoContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
    </LinearLayout>

</LinearLayout>