<?xml version="1.0" encoding="utf-8"?>
<com.digosofter.digodroid.controle.painel.PainelGeral
    android:id="@+id/actDetalhe_pnlConteudo"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.digosofter.digodroid.controle.painel.PainelDetalheCabecalho
        android:id="@+id/actDetalhe_pnlTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3949AB"
        android:gravity="bottom"
        android:orientation="vertical"
        android:padding="10dp">

        <com.digosofter.digodroid.controle.label.LabelGeral
            android:id="@+id/actDetalhe_lblIntRegistroId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="_registro_id"
            android:textColor="@android:color/white"
            app:enmFonteTamanho="PEQUENO"/>

        <com.digosofter.digodroid.controle.label.LabelGeral
            android:id="@+id/actDetalhe_lblStrRegistroNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="_registro_nome"
            android:textColor="@android:color/white"
            app:enmFonteTamanho="NORMAL"/>

    </com.digosofter.digodroid.controle.painel.PainelDetalheCabecalho>

    <ScrollView
        android:id="@+id/actDetalhe_pnlCamposScroll"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <com.digosofter.digodroid.controle.painel.PainelGeral
            android:id="@+id/actDetalhe_pnlCampos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">
        </com.digosofter.digodroid.controle.painel.PainelGeral>

    </ScrollView>

</com.digosofter.digodroid.controle.painel.PainelGeral>