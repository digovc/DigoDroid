<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="rectangle">
            <gradient
                android:angle="90"
                android:endColor="@color/cor_cinza_claro"
                android:startColor="@color/cor_cinza_escuro"
                android:type="linear"/>
        </shape>
    </item>
    <item
        android:bottom="2dp"
        android:left="1dp"
        android:right="1dp">
        <shape
            android:shape="rectangle">
            <solid android:color="@color/cor_cinza_claro"/>
        </shape>
    </item>
</layer-list>